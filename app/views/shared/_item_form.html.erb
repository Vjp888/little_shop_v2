<% if @item.errors.any? %>
<ul>
  <% @item.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
<% end %>

<%= form_for [:dashboard, @item] do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :description, class: 'textarea-label' %>
  <%= f.text_area :description %>
</p>
<p>
  <%= f.label :image_url, "Image URL"%>
  <%= f.text_field :image_url %>
</p>
<p>
  <%= f.label :current_price, "Price" %>
  <%= f.number_field :current_price, class: 'currency', step: 0.01, min: 0.0 %>
</p>
<p>
  <%= f.label :quantity, "Inventory" %>
  <%= f.number_field :quantity %>
</p>

  <%= f.submit "#{form_type} Item" %>

<% end %>
