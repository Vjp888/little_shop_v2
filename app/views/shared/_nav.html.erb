<nav class="main-nav shadowed-box">
  <span class="nav-left">
    <%= link_to 'Home', root_path, class: 'home-link' %>
    <%= link_to 'Browse Items', items_path, class: 'items-link' %>
    <%= link_to 'View Merchants', merchants_path, class: 'merchants-link' %>
  </span>
  <% if current_user %>
  <span class="nav-center">Logged in as <%= current_user.name %></span>
  <% end %>
  <span class="nav-right">
    <% if current_customer? %>
    <%= link_to "Cart: #{@cart.total_count}", cart_path, class: 'cart-link' %>
    <% end %>
    <%= yield %>
  </span>
</nav>
