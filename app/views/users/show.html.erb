<main class="show-user shadowed-box">
  <h1>Welcome, <%= @user.name %></h1>

  <p>Name: <%= @user.name %></p>
  <p>Street Address: <%= @user.street_address %></p>
  <p>State: <%= @user.state %></p>
  <p>City: <%= @user.city %></p>
  <p>Zip Code: <%= @user.zip_code %></p>
  <p>Email: <%= @user.email %></p>
  <%= link_to "Edit Profile", profile_edit_path %>
  <%= link_to "View Your Orders", profile_orders_path %>
</main>
