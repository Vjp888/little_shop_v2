<main class="profile-orders-show shadowed-box">
  <section class="table-row user-orders" id="order-info">
    <span class="order-id">Order ID: <%= @order.id %></span>
    <span class="order-status">Order Status: <%= @order.status %></span>
    <span class="order-quantity">QTY of Items: <%= @order.total_count %></span>
    <span class="order-total">Grand Total: <%= number_to_currency(@order.total_cost) %></span>
    <span class="order-placed">Order Placed: <%= @order.created_at.strftime("%m/%d/%Y") %></span>
    <span class="order-updated">Last Updated: <%= @order.updated_at.strftime("%m/%d/%Y") %></span>
    <% if @order.pending? %>
      <%= button_to "Cancel Order" %>
    <% end %>
  </section>

  <% @line_items.each do |line| %>
    <section class="order-item" id="item-<%= line.item.id %>">
      <%= image_tag "#{line.item.image_url.gsub('500x500', '100x100')}", size: "100x100" %>
      <span class="item-name">Item: <%= link_to line.item.name, item_path(line.item.id) %></span><br>
      <span class="item-price">Individual Price: <%= number_to_currency(line.ordered_price) %></span>
      <span class="item-quantity">QTY: <%= line.quantity %></span>
      <span class="item-subtotal">Subtotal: <%= number_to_currency(line.subtotal) %></span><br>
      <span class="item-description">Description: <%= line.item.description.gsub(/(.{125}).{4,}/m,'\1â€¦') %></span>
    </section>
  <% end %>
</main>
